{
  "manifest_version": 3,
  "name": "Full Page Screenshot",
  "version": "1.0",
  "description": "Capture a full-page screenshot and save it to your downloads folder.",
  "permissions": [
    "downloads",
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_title": "Capture Screenshot",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
